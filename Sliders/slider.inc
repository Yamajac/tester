[Handle_MouseDown]
UpdateDivider=-1
Group=NoInit|Slider
Measure=Calc
Disabled=1
OnUpdateAction=[!ShowMeterGroup Detectors][!UpdateMeterGroup Detectors][!Redraw]

[Handle_MouseUp]
UpdateDivider=-1
Group=NoInit|SliderClose
Measure=Calc
Disabled=1
OnUpdateAction=[!HideMeterGroup Detectors][!UpdateMeterGroup Detectors][!Redraw]

[CheckDirection]
UpdateDivider=-1
Measure=Calc
IfCondition=#SliderDirection#=0
IfTrueAction=[!SetOptionGroup Detectors Shape "Rectangle (#*MouseX*#+(#*CURRENTSECTION*#*2)-40),#SliderY#,2,#SliderHeight# | Extend Detectors"][!SetOptionGroup Detectors MouseOverAction "[!SetVariable MouseX (#*MouseX*#-40+(#*CURRENTSECTION*#*2))][!SetVariable #*SliderCoord*# (clamp(([#*[#SliderCoord]*]+([#*MouseX*]-[#*[#SliderCoord]*])),#SliderLowBound#,#SliderHighBound#))][!UpdateMeterGroup Detectors][!UpdateMeterGroup SliderControl][!UpdateMeasureGroup MouseMove][!Redraw]"][!SetOption 19 Shape "Rectangle (#*MouseX*#+(#*CURRENTSECTION*#*2)-40),#SliderY#,6,#SliderHeight# | Extend Detectors"]
IfFalseAction=[!SetOptionGroup Detectors Shape "Rectangle #SliderX#,(#*MouseY*#+(#*CURRENTSECTION*#*2)-40),#SliderWidth#,2 | Extend Detectors"][!SetOptionGroup Detectors MouseOverAction "[!SetVariable MouseY (#*MouseY*#-40+(#*CURRENTSECTION*#*2))][!SetVariable #*SliderCoord*# (clamp(([#*[#SliderCoord]*]+([#*MouseY*]-[#*[#SliderCoord]*])),#SliderLowBound#,#SliderHighBound#))][!UpdateMeterGroup Detectors][!UpdateMeterGroup SliderControl][!UpdateMeasureGroup MouseMove][!Redraw]"][!SetOption 19 Shape "Rectangle #SliderX#,(#*MouseY*#+(#*CURRENTSECTION*#*2)-40),#SliderWidth#,6 | Extend Detectors"]

[MouseDetectors]
UpdateDivider=-1
Group=Detectors
Hidden=1
DynamicVariables=1
Detectors=FillColor 0,0,0,1 | StrokeWidth 0
LeftMouseUpAction=[!UpdateMeasureGroup SliderClose][!UpdateMeasureGroup MouseMove][!UpdateMeterGroup SliderControl][!Redraw]

[SliderPercentage]
UpdateDivider=-1
Group=MouseMove
DynamicVariables=1
Measure=Calc
Formula=([#[#SliderCoord]]-#SliderLowBound#)/(#SliderHighBound#-#SliderLowBound#)



[EnableThatShit]
UpdateDivider=-1
Group=SliderClose
Measure=Calc
OnUpdateAction=[!EnableMeasureGroup NoInit]

